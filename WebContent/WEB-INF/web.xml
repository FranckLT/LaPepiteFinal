<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>LaPepite</display-name>
  <servlet>
    <servlet-name>homeServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.homeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShopIndexServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.ShopIndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisteringServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.RegisteringServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>productServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.productServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>panierServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.panierServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminIndexServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.AdminIndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminIndexBijouxServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.AdminIndexBijouxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminEditBijouxServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.AdminEditBijouxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminAddBijouxServlet</servlet-name>
    <servlet-class>fr.lapepite.controller.AdminAddBijouxServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>homeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShopIndexServlet</servlet-name>
    <url-pattern>/shop</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisteringServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>productServlet</servlet-name>
    <url-pattern>/shop/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>panierServlet</servlet-name>
    <url-pattern>/panier</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminIndexServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminIndexBijouxServlet</servlet-name>
    <url-pattern>/admin/bijoux</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminEditBijouxServlet</servlet-name>
    <url-pattern>/admin/bijoux/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminAddBijouxServlet</servlet-name>
    <url-pattern>/admin/bijoux/add</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>